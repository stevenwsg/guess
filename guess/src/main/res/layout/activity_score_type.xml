<?xml version="1.0" encoding="utf-8"?>
<com.example.asus.view.DropZoomScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skin_img_default"
    android:fillViewport="true"
    android:scrollbars="none"
    android:tag="skin:skin_img:background"
    tools:context="com.example.asus.activity.RankTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/topImg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:padding="1dp"
            app:tabIndicatorColor="@color/whitelight"
            app:tabIndicatorHeight="1dp"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/whitelight"/>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            />


    </LinearLayout>
</com.example.asus.view.DropZoomScrollView>

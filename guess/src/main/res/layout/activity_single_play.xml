<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back22"
    tools:context="com.example.asus.activity.SinglePlayActivity">

    <!--宽高必须大于 320 * 200    且宽高比 必须大于 640/400 = 1.6   = 1280/800
             -->
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#151515"
        android:gravity="center_horizontal"
        android:padding="10dp"
        >

        <com.example.asus.view.XfermodeView
            android:id="@+id/XfermodeView"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/movieNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/line"
        android:layout_below="@+id/line"
        android:layout_marginLeft="8dp"
        android:text="1/3"
        />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/line"
        android:layout_below="@+id/line"
        android:layout_marginRight="8dp"
        android:text="100"
        />

    <RelativeLayout
        android:id="@+id/key"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/score"
        android:layout_marginBottom="100dp"
        >
    </RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:background="#00000000"
        android:onClick="forHelp"
        android:text="求 助"/>

    <TextView
        android:id="@+id/mscTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageBt"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/imageBt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/msc1"
        android:onClick="voice"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:background="#00000000"
        android:onClick="jump"
        android:layout_alignParentRight="true"
        android:text="跳 过"/>


</RelativeLayout>
